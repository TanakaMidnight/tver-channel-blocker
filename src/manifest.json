{
  "manifest_version": 3,
  "name": "TVer Channel Blocker",
  "version": "1.0.0",
  "description": "TVerの特定の番組を非表示にするChrome拡張機能です。",
  "permissions": ["storage"],
  "host_permissions": ["https://tver.jp/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://tver.jp/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
