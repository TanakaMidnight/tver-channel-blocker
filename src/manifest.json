{
  "manifest_version": 3,
  "name": "TVer Program Blocker",
  "version": "1.0.0",
  "description": "TVerの特定の番組を非表示にするChrome拡張機能です。",
  "permissions": ["storage"],
  "host_permissions": ["https://tver.jp/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://tver.jp/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
